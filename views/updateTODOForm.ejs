<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="./css/style.css">
    <title>TODO | Vikram</title>
    <link rel="shortcut icon" href="./images/todo-icon.png" type="image/x-icon">
  </head>
  <body>
    <nav class="navbar navbar-expand navbar-light pt-4 ps-5 pe-5"  >
      <!-- style="background-color: #004989;" -->
      <div class="container me-md-5 ms-md-5 ps-md-5 pe-md-5" >
        <!-- style="border-bottom: 2px solid #000;" -->
        <a class="navbar-brand" href="/dashboard">
          <img src="./images/todo-icon.png" alt="" width="80" >
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <!-- <li class="nav-item">
              <a class="nav-link" aria-current="page" href="index.html">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#" onclick="ResetLocalStorage()">Reset Game</a>
            </li> -->
          </ul>
          <div class="d-flex">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" data-bs-toggle="modal" data-bs-target="#exampleModal"  onclick="ResetLocalStorage()"><i
                    class="bi bi-arrow-repeat" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Reset App"></i></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" data-bs-toggle="modal" data-bs-target="#modalDevelope"><i class="bi bi-info-circle-fill" data-bs-toggle="tooltip" data-bs-placement="bottom" title="App Details"></i></a>
              </li>
              <li class="nav-item">
                <a href="/logout" class="nav-link" aria-current="page"  data-bs-target="#modalDevelope"><i class="bi bi-power" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Signout"></i></a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <div class="container ps-5 pe-5">
      <div class="row">
        <div class="col-sm-12 pe-5">
          <h4 class="text-muted text-end">Welcome, <strong><span id="userDisplayName"><%= displayName %></span></strong></h4>
        </div>
      </div>
    </div>

    <div class="container" >
      <div class="row">
          <div class="pt-0 ps-5 pe-5 pb-4 display-3 text-center">TODO. APP</div>
      </div>
      <div class="row" id="inputDiv">
        <form action="/updateTODO/<%= todo_id %>" method="post">
        <input type="text" value="<%= username %>" name="username" id="username"  placeholder="User Name" class="form-control m-auto" disabled/>
        <input type="text" value="<%= title %>" name="title" id="title" placeholder="Ex. shopping" class="form-control m-auto" />
        <select name="category" class="form-select" aria-label="Default select example">
            <option value="work" <% if(category == "work"){ %>selected<% }%>>Work</option>
            <option value="hobby" <% if(category == "hobby"){ %>selected<% }%>>Hobby</option>
            <option value="task" <% if(category == "task"){ %>selected<% }%>>Task</option>
            <option value="other" <% if(category == "other"){ %>selected<% }%>>Other</option>
          </select>
          <select name="status" class="form-select" aria-label="Default select example">
            <option value="active" <% if(status == "active"){ %>selected<% }%>>active</option>
            <option value="in-progress" <% if(status == "in-progress"){ %>selected<% }%>>in-progress</option>
            <option value="completed" <% if(status == "completed"){ %>selected<% }%>>completed</option>
          </select>
          <input type="text" value="<%= moment().format('Do MMMM, YYYY', createdAt) %>" name="createdAt" id="createdAt" placeholder="Ex. date" class="form-control m-auto" disabled/>
       <button type="submit" data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btnStyle mt-2" >Update TODO</button>
       </form>
      </div>
    </div>


      
      


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add New TODO Item</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">

             updating item...

          </div>
        </div>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalDevelope" tabindex="-1" aria-labelledby="modalDeveloper" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalDeveloper">Todo App Developed By</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <ol>
              <li>Vikram Kumar</li>
          
            </ol>
        
          </div>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="./js/script.js"></script>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    

  
  </body>
</html>